{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 800,
    "projection": {"type": "albersUsa"},
  
    "data": {
      "url": "data/cb_2018_us_state_500k.json",
              "format": {
                  "type": "topojson", 
                  "feature":"cb_2018_us_state_500k"
              }
    },
    "config": {
      "view": {
         "stroke": "transparent"
      },
      "background": "white"
    },
  
    "params": [
        {
          "name": "Victims_above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 80,
            "step": 1,
            "name": "Minimum Victims: "
          }
        }
      ],
  
    "layer": [
      { 
        "mark":{
          "type": "geoshape", 
          "fill": "lightgray", 
          "stroke":"white"
        }
      },
      {
        "data": {
            "url":"data/new_data.csv"
        },

  
        "mark": {
            "type": "circle"
        },
        "transform": [
            {"filter": "datum.Victims > Victims_above"}        
        ],


  
        "encoding": {
            "longitude": {
                "field": "Longitude", 
                "type": "quantitative"
            },
            "latitude": {
                "field": "Latitude", 
                "type":"quantitative"
            },
            "size": {
                "field": "Victims",
                "type": "quantitative",
                "title": "Victims",
                "scale": {
                    "type": "threshold",
                    "domain": [10,20,30,50,70,100],
                    "range": [10, 50, 150, 200, 300, 400]
                }
            },

            "color": {
              "field": "Location",
              "type": "ordinal",
              "title": "Location",
              "scale": {
                  "domain":[
                      "Religious",
                      "School",
                      "Workplace",
                      "Military",
                      "Airpot",
                      "Other"
                  ],

                  "range": [
                      "white", 
                      "blue", 
                      "brown",
                      "green",
                      "orange",
                      "purple"
                      ]
              }
          },
            "tooltip": [
                {"field": "Case", "type": "ordinal"},
                {"field": "Date","type": "ordinal"},
                {"field": "Fatalities", "type": "nominal"},
                {"field": "Injured", "type": "nominal"},
                {"field": "Victims", "type": "nominal"}
            ]
        }
      },
      {
        "data": {
          "url":"data/new_data.csv"
      },
        "mark": { "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -15,
        "fontStyle": "italic"
        },
        "encoding": { 
            "text": {"field": "Case", "type": "nominal"},
            "longitude": {
                "field": "Longitude", 
                "type": "quantitative"
            },
            "latitude": {
                "field": "Latitude", 
                "type":"quantitative"
            },
            "size": {"value" :15},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Victims']>= 70",
                "value": 1
              },
              "value": 0
            }
        }
      }
    ]
  }